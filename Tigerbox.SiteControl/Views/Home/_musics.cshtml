@model System.Collections.Generic.IList<Tigerbox.Objects.TigerMedia>
<div class="tigerContent" style="max-height: 200px; overflow-y: scroll;">
    @{
        for (int i = 0; i < Model.Count; i++)
        {
            var media = Model[i];
            if (!media.IsImage)
            {
                string iconUrl = string.Format("data:image/{0};base64,{1}", "png", Session["MusicIcon"]);
                if (!media.Type.ToUpper().Equals("MP3") && !media.IsImage)
                {
                    iconUrl = string.Format("data:image/{0};base64,{1}", "png", Session["VideoIcon"]);
                }
                string mediaComp = string.Format("mediaNameDiv{0}", i);
                <div onclick="selectMedia(@i)" class="col-md-12 col-sm-12 col-xs-12 tigerMedia">
                    <div class="col-md-2 col-sm-2 col-xs-2 align-left">
                        <img src="@iconUrl" class="imgListIcon" />
                    </div>
                    <div id="@mediaComp" class="col-md-10 col-sm-10 col-xs-10">
                        @media.Name
                    </div>
                </div>
            }
        }
    }
</div>